{
  "manifest_version": 3,
  "name": "ADO Pipeline Build Tracker",
  "version": "1.0.3",
  "description": "Track Azure DevOps pipeline builds and artifacts across multiple stages",
  "action": {
    "default_popup": "popup.html",
    "default_title": "PremFina Build Tracker"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "host_permissions": [
    "https://dev.azure.com/*",
    "https://*.visualstudio.com/*"
  ],
  "icons": {
    "16": "public/icon16.png",
    "32": "public/icon32.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  }
}