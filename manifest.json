{
  "manifest_version": 3,
  "name": "ADO Pipeline Build Tracker",
  "version": "1.0.3",
  "description": "Track Azure DevOps pipeline builds and artifacts across multiple stages",
  "action": {
    "default_popup": "popup.html",
    "default_title": "ADO Build Tracker"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://dev.azure.com/*",
    "https://*.visualstudio.com/*"
  ],
  "icons": {
    "16": "public/icon-16.svg",
    "48": "public/icon-48.svg",
    "128": "public/icon-128.svg"
  }
}